<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp" >

        <TextView
            android:id="@+id/textViewFormName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Add Branch"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <requestFocus />

        <EditText
            android:id="@+id/addbranch"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="101dp"
            android:background="@drawable/roundedtextview"
            android:ems="10"
            android:hint="Branch name"
            android:paddingLeft="15dp" />

        <Button
            android:id="@+id/SaveButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="176dp"
            android:background="@drawable/roundedbutton"
            android:onClick="addbr"
            android:text="Add"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/ShowButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/SaveButton"
            android:background="@drawable/roundedbutton"
            android:onClick="showbr"
            android:text="Show"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/showBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="247dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp" />


    </RelativeLayout>
</ScrollView>